@using RavenNest.BusinessLogic.Extended
<div class="inventoryStorage @(StorageLocation.ToString())-@(OwnerId)">
    <span>
        @(
            CharactersBag != null ? GetIdentifier(CharactersBag) : "Stash";
        )
    </span>

    <div class="container-of-items @dropClass"
         ondragover="event.preventDefault();"
         ondragstart="event.dataTransfer.setData('', event.target.id);"
         @ondrop="HandleDrop"
         @ondragenter="HandleDragEnter"
         @ondragleave="HandleDragLeave">

        @if (StorageLocation.Equals(Location.Bank))
        {
            foreach (var slot in Enum.GetValues(typeof(BusinessLogic.Providers.EquipmentSlot)))
            {
                if (!slot.Equals(BusinessLogic.Providers.EquipmentSlot.None))
                {
                    var itemInstance = ItemInstances.SingleOrDefault(x => x.EquipmentSlot.Equals(slot));
                    <InventoryItemComponent Item="itemInstance" Slot="itemInstance.EquipmentSlot" />
                }
            }
        }
        else
        {
            foreach (var itemInstance in ItemInstances)
            {
                <InventoryItemComponent Item="itemInstance" />
            }
        }
    </div>


</div>