
    <div class="item draggable"
         data-item="@Item.Id"
         draggable="true"
         title="@Item.ItemInfo.Name"
         @ondragstart=@(() => HandleDragStart(Item))
         @onclick=HandleClickEvent>
<ItemTooltip Item="Item">
        <div class="image-holder">
        <img class="item-image" src="@Item.GetItemImageSrc()" />
        </div>
    @if (!Item.Equipped)
    {
        <div class="item-amount@(Item.Amount <= 1 ? " invisible" : "")">
            @(Item.GetItemAmount())
        </div>
    }
    </ItemTooltip>
    </div>

